generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Slot {
  id        String   @id @default(cuid())
  startTime DateTime
  duration  Int
  isTaken   Boolean  @default(false)
  booking   Booking? @relation("SlotBooking")

  holdUntil DateTime?
  holdKey   String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([startTime])
  @@index([startTime])
}

model Booking {
  id          String   @id @default(cuid())
  sessionType String
  status      String   @default("unpaid")
  slot        Slot     @relation("SlotBooking", fields: [slotId], references: [id])
  slotId      String   @unique
  liveMinutes Int
  inGame      Boolean  @default(false)
  followups   Int      @default(0)
  discord     String
  notes       String?
  createdAt   DateTime @default(now())

  stripeSessionId String?    @unique
  paymentProvider String?
  paymentRef      String?    @unique
  amountCents     Int?
  currency        String     @default("eur")
  blockCsv        String?
  customerEmail   String?
  emailLogs       EmailLog[]
}

model ProcessedEvent {
  id        String   @id
  createdAt DateTime @default(now())
}

model EmailLog {
  id        String   @id @default(cuid())
  booking   Booking  @relation(fields: [bookingId], references: [id])
  bookingId String
  kind      String // "reminder-24h" | "reminder-2h" | "confirm"
  sentAt    DateTime @default(now())
  createdAt DateTime @default(now())

  @@unique([bookingId, kind])
  @@index([bookingId]) // optional but useful
}

model WebhookEvent {
  id        String   @id @default(cuid())
  type      String
  payload   Json?
  createdAt DateTime @default(now())
}
